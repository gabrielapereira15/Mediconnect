<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".fragment.PreAppointmentFormFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <!-- Surgery Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/surgery_question"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioButtonYesSurgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/dark_gray" />

                <RadioButton
                    android:id="@+id/radioButtonNoSurgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textColor="@color/dark_gray" />
            </RadioGroup>

            <!-- Smoke Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smoke_question"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioButtonYesSmoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/dark_gray" />

                <RadioButton
                    android:id="@+id/radioButtonNoSmoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textColor="@color/dark_gray" />
            </RadioGroup>

            <!-- Alcohol Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alcohol_question"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioButtonYesAlcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="@color/dark_gray" />

                <RadioButton
                    android:id="@+id/radioButtonNoAlcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textColor="@color/dark_gray" />
            </RadioGroup>

            <!-- Chronic Condition -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chronic_condition"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBoxDiabetes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diabetes"
                        android:textColor="@color/dark_gray" />

                    <CheckBox
                        android:id="@+id/checkBoxHypertension"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hypertension"
                        android:textColor="@color/dark_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBoxHeartDisease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heart_disease"
                        android:textColor="@color/dark_gray" />

                    <CheckBox
                        android:id="@+id/checkBoxAsthma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asthma"
                        android:textColor="@color/dark_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Family History of Disease -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/family_history_disease"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBoxDiabetes2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diabetes"
                        android:textColor="@color/dark_gray" />

                    <CheckBox
                        android:id="@+id/checkBoxCancer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancer"
                        android:textColor="@color/dark_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/green"
                android:text="@string/submit"
                android:textColor="@color/dark_gray" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
