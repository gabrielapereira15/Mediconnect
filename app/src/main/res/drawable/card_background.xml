<!-- res/drawable/card_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#E0E0E0" /> <!-- Light gray shadow color -->
        </shape>
    </item>

    <!-- Main card layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FFFFFF" /> <!-- Card background color -->
        </shape>
    </item>

</layer-list>
