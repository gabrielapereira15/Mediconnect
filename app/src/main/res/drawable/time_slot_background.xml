<!-- res/drawable/time_slot_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#007AFF" /> <!-- Blue background for selected -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp" />
        </shape>
    </item>

    <!-- Unselected State -->
    <item>
        <shape>
            <solid android:color="#F0F4F8" /> <!-- Light gray background for unselected -->
            <corners android:radius="8dp" />
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp" />
            <stroke android:width="1dp" android:color="#C5C5C5"/> <!-- Gray border for unselected -->
        </shape>
    </item>
</selector>
